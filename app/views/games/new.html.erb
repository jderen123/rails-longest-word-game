<div class="container">
<h1>New Game</h1>

<ul id="letterlist">
  <% @letters.each do |letter| %>
    <li id="letter"><%= letter %></li>
  <% end %>
</ul>
<h3>What is the longest word you can find?</h3>
  <form action="/score" method="post">

  <input type="text" name="word" id="searcher">
  <input id="tags_list" name= "letters"  type="hidden" value= "<%=@letters%>" >
  <input type="submit" value="Play" id="btn">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

</div>


